@model List<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Count == 0)
{
    <p>No customers found</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Membership type</th>
            </tr>
        </thead>
        @foreach (var c in Model)
        {
            @*<tr><td><a href="/Customers/Details/@c.Id">@c.Name</a></td></tr>*@
            <tr>
                @*<td>@Html.ActionLink(c.Name, "Details", "Customers", new { id = c.Id }, null)</td>*@
                <td>@Html.ActionLink(c.Name, "Edit", "Customers", new { id = c.Id }, null)</td>
                <td>@c.MembershipType.Description</td>
            </tr>
        }
    </table>
}

