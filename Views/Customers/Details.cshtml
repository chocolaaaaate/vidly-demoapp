@model Vidly.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null)
{
    <h2>@Model.Name</h2>
    <p>Membership type: @Model.MembershipType.Description</p>
    <p>Date of birth: @Model.DoB.ToShortDateString()</p>
}
else
{
    <p>No customer with this ID</p>
}

