
@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Count == 0)
{
    <p>No movies found.</p>
}
else
{
    <table>
        @foreach (var m in Model)
        {
            <tr><td>@m.Name</td></tr>
        }
    </table>
}

