
@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Count == 0)
{
    <p>No movies found.</p>
}
else
{
    @Html.ActionLink("New Movie", "New", "Movies");

    <table class="table table-bordered table-hover">
        <tr>
            <th>Name</th>
            <th>Genre</th>
        </tr>
        @foreach (var m in Model)
        {
            <tr>
                <td>@Html.ActionLink(m.Name, "Details", "Movies", new { id = m.Id }, null)</td>
                <td>@m.Genre.Name</td>
            </tr>
        }
    </table>
}

